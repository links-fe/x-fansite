{
	"name": "x-links-app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "npm run load-theme && next dev --turbopack",
		"build": "next build",
		"build:test": "feci-env env=test && npm run build",
		"build:prod": "feci-env env=production && npm run build",
		"start": "next start",
		"load-theme": "node ./scripts/fetch-theme.mjs",
		"reload-theme": "force_fetch_theme=true npm run load-theme",
		"lint": "eslint src --ext .js,.jsx,.ts,.tsx && next lint && prettier --check src",
		"lint-fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix && prettier --write src",
		"analyze": "ANALYZE=true next build",
		"prepare": "husky",
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"yarn lint-fix"
		]
	},
	"dependencies": {
		"@hb-common/bear-request": "^1.2.2",
		"@hb-common/crm-browser-tracker": "^0.0.13",
		"@hb-common/utils": "^2.2.0",
		"@rajesh896/video-thumbnails-generator": "^2.3.9",
		"@x-vision/design": "^0.1.3-alpha.3",
		"@x-vision/icons": "^1.1.10",
		"@yxim/nim-web-sdk": "^9.19.13",
		"@zxcvbn-ts/core": "^3.0.4",
		"@zxcvbn-ts/language-common": "^3.0.4",
		"@zxcvbn-ts/language-en": "^3.0.2",
		"ahooks": "^3.8.4",
		"classnames": "^2.5.1",
		"eruda": "^3.4.1",
		"google-auth-library": "^9.15.1",
		"jwt-decode": "^4.0.0",
		"lodash": "^4.17.21",
		"messageformat": "^4.0.0-10",
		"next": "15.1.6",
		"nprogress": "^0.2.0",
		"pako": "^2.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-easy-crop": "^5.4.1",
		"react-google-recaptcha": "^3.1.0",
		"react-sortablejs": "^6.1.4",
		"react-verification-input": "^4.2.2",
		"sortablejs": "^1.15.6",
		"swiper": "^11.2.7",
		"tailwind-merge": "^3.0.2",
		"vconsole": "^3.15.1",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@hb-common/eslint-config": "^0.0.13",
		"@hb-common/feci-env": "^1.0.5",
		"@hb-common/prettier-config": "^0.0.6",
		"@next/bundle-analyzer": "^15.2.1",
		"@tailwindcss/postcss": "^4.1.8",
		"@types/google.accounts": "^0.0.15",
		"@types/jest": "^29.5.14",
		"@types/lodash": "^4.17.16",
		"@types/node": "^20",
		"@types/nprogress": "^0.2.3",
		"@types/pako": "^2.0.3",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/react-google-recaptcha": "^2.1.9",
		"dayjs": "^1.11.13",
		"eslint": "^9",
		"eslint-config-next": "15.1.6",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^15.4.3",
		"postcss": "^8",
		"react-div-100vh": "^0.7.0",
		"sass": "^1.84.0",
		"tailwindcss": "^4.1.8",
		"ts-jest": "^29.3.2",
		"typescript": "^5",
		"uuid": "^11.1.0"
	},
	"prettier": "@hb-common/prettier-config",
	"eslintConfig": {
		"extends": "@hb-common/eslint-config/react"
	}
}
